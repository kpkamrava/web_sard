@model IEnumerable<web_sard.Models.tbls.packing.packing>

@{
    ViewData["Title"] = "لیست جعبه ها";
}

 
<p>
    <a asp-action="Create" class="btn btn-outline-success fa fa-plus"> ثبت جدید</a>
</p>
<table class="table">
    <thead >
        <tr>
          
            <th>
                <i class="	fa fa-sort-numeric-down"></i>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WightEmpty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WightFull)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                  @item.WightEmpty.ToString("##0.###") 
            </td>
            <td>
                  @item.WightFull.ToString("##0.###") 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <a asp-action="Create" asp-route-id="@item.Id" class="btn btn-outline-info fa fa-edit"></a>

            </td>
        </tr>
}
    </tbody>
</table>
