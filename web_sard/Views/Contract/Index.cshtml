                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContractType.Title)

                    </td>

                    <td>
                        @item.Date.ToPersianDate()
                    </td>

                    <td>
                        @item.Azdate

                    </td>
                    <td>
                        @item.Tadate
                    </td>
                    <td>
                        <small>@Html.Raw(item.Txt)</small>
