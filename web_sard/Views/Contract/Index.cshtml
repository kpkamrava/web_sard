                </th>


                <th>
                    جمع
                </th>
                <th>
                    مانده
                </th>
                <th>نرخ</th>

                <th>
                    قرارداد
                </th>


                <th>
                    جمع
                </th>

                <th>
                    مانده
                </th>
                <th>نرخ</th>
            </tr>
        </thead>
        <tbody>
            @{ int i = 1;}
            @foreach (var item in Model)
            {
                <tr @(item.Txt.IsEmpty() == false ? "class=table-warning" : "")>
                    <td>

                        @i  @{i++; }
                    </td>

                    <td>
