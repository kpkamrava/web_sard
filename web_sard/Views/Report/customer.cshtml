                            @Html.DisplayFor(modelItem => item.IdOtherSystem)
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.Code)

                        }
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
