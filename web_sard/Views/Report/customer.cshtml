                    <td>
                        @item.CInSum.ToKilo()
                    </td>
                    <td>
                        @item.CInMandeContract.ToKilo()
                    </td>
                    <td>
                        @item.COutMaxContract.ToKilo()
                    </td>
                    <td>
                        @item.COutSum.ToKilo()
                    </td>
                    <td style="border-right:3px; border-color:black;">
                        @item.COutMandeContract.ToKilo()
                    </td>
