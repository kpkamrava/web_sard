@model IEnumerable<web_db._queu.TblQueu>

@{
    ViewData["Title"] = "لیست درخواستها";
}

<h1>لیست درخواستها</h1>
<div>
    @foreach (var item in web_db._queu.TblQueu.QueuEnum.Save.GetAllItems())
    {
       <a asp-route-id="@item" class="btn btn-light @(ViewBag.id==item?" active":"")">@item.ToKPvalusAttr().Description</a>

    }
</div>
 
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.date)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Addras)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.Mahsuls)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Txt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TxtReq)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @item.date.ToPersianDateMini()
            </td> 
            <td>
                @Html.DisplayFor(modelItem => item.Name)
                @Html.DisplayFor(modelItem => item.codemeli)
            </td> 
            <td>
                @Html.DisplayFor(modelItem => item.Addras)
                @Html.DisplayFor(modelItem => item.mob)
            </td> 
            <td>
                @Html.DisplayFor(modelItem => item.Mahsuls)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Txt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TxtReq)
            </td>

            <td>
                <a asp-action="taiidrad" asp-route-id="@item.Id" class="btn btn-info" ismodal="true">عملیات</a>
            </td>
        </tr>
}
    </tbody>
</table>
